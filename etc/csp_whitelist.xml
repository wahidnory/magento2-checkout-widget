<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="paazl-widget-acc" type="host">https://widget-acc.paazl.com</value>
                <value id="paazl-widget-prod" type="host">https://widget.paazl.com</value>
                <value id="paazl-api-acc" type="host">https://api-acc.paazl.com</value>
                <value id="paazl-api-prod" type="host">https://api.paazl.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="paazl-widget-acc-css" type="host">https://widget-acc.paazl.com</value>
                <value id="paazl-widget-prod-css" type="host">https://widget.paazl.com</value>
                <value id="paazl-api-acc-css" type="host">https://api-acc.paazl.com</value>
                <value id="paazl-api-prod-css" type="host">https://api.paazl.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="paazl-widget-acc-connect" type="host">https://widget-acc.paazl.com</value>
                <value id="paazl-widget-prod-connect" type="host">https://widget.paazl.com</value>
                <value id="paazl-api-acc-connect" type="host">https://api-acc.paazl.com</value>
                <value id="paazl-api-prod-connect" type="host">https://api.paazl.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
